{% extends 'base.html.twig' %}
{% block person %}
    class="active"
{% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header" data-background-color="purple">
                        <h4 class="title">Edit Person</h4>
                        <p class="category">Edit {{ person.fullNames }}</p>
                    </div>
                    <div class="card-content">
                        {{ form_start(personForm) }}
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group label-floating is-empty">
                                        <label class="control-label">ID Number</label><br/>
                                        {{ form_row(personForm.idNumber,{'attr':{'class':'form-control'}}) }}
                                        <span class="material-input"></span></div>
                                </div>


                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group label-floating is-empty">
                                        <label class="control-label">Fist Name</label><br/>
                                        {{ form_row(personForm.firstName,{'attr':{'class':'form-control'}}) }}
                                        <span class="material-input"></span></div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group label-floating is-empty">
                                        <label class="control-label">Middle Name</label><br/>
                                        {{ form_row(personForm.middleName,{'attr':{'class':'form-control'}}) }}
                                        <span class="material-input"></span></div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group label-floating is-empty">
                                        <label class="control-label">Last Name</label><br/>
                                        {{ form_row(personForm.lastName,{'attr':{'class':'form-control'}}) }}
                                        <span class="material-input"></span></div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group label-floating is-empty">
                                        <label class="control-label">Country</label><br/><br/>
                                        {{ form_row(personForm.country,{'attr':{'class':'form-control select2'}}) }}
                                        <span class="material-input"></span></div>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary pull-right">Update Profile</button>
                            <div class="clearfix"></div>
                        {{ form_end(personForm) }}
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card-profile">
                    <div class="card-avatar">
                        <a href="#pablo">
                            {% if person.imageName %}
                                <img src="{{ asset('images/profile/') }}{{ person.imageName }}"/>
                            {% else %}
                                <img class="img" src="../assets/img/faces/marc.jpg">
                            {% endif %}
                        </a>
                    </div>
                    <div class="content">
                        <h4 class="card-title">{{ person.fullNames }}</h4>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
<!-- Material Dashboard javascript methods -->
<script src="{{ asset('assets/js/material-dashboard.js') }}"></script>
<!-- Material Dashboard DEMO methods, don't include it in your project! -->
<script src="{{ asset('assets/js/demo.js') }}"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            $('.select2').select2();
        });
    </script>
{% endblock %}