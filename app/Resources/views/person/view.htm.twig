{% extends 'based.html.twig' %}
{% block body %}
    <style>
        label.control-label {
            font-size: 12px;
            line-height: 1.0714285718;
            color: #AAAAAA;
            font-weight: 400;
            margin: 16px 0 0 0;
        }
    </style>
    <div class="container-fluid">
        <div class="row">

            <div class="col-md-4">
                <div class="card card-profile">
                    <div class="card-avatar">
                        <a href="#pablo">
                            {% if person.imageName %}
                                <img src="{{ asset('images/profile/') }}{{ person.imageName }}"/>
                            {% else %}
                                <img class="img" src="../assets/img/faces/marc.jpg">
                            {% endif %}
                        </a>
                    </div>
                    <div class="content">
                        <h4 class="card-title">{{ person.fullNames }}</h4>
                        <div class="card-content">
                            <table>
                                <tr>
                                    <td><label class="control-label"><strong>ID Number</strong></label></td>
                                    <td><label class="control-label"><strong>{{ person.idNumber }}</strong></label></td>
                                </tr>
                                <tr>
                                    <td><label class="control-label"><strong>First Name</strong></label></td>
                                    <td><label class="control-label"><strong>{{ person.firstName }}</strong></label></td>
                                </tr>
                                <tr>
                                    <td><label class="control-label"> <strong>Middle Name</strong></label></td>
                                    <td><label class="control-label"> <strong>{{ person.middleName }}</strong></label></td>
                                </tr>
                                <tr>
                                    <td><label class="control-label"><strong>Last Name</strong></label></td>
                                    <td><label class="control-label"><strong>{{ person.lastName }}</strong></label></td>
                                </tr>
                                <tr>
                                    <td><label class="control-label"><strong>Country</strong></label></td>
                                    <td><label class="control-label"><strong>{{ person.country }}</strong></label></td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header" data-background-color="rose">
                        <p class="category">List of Certifications</p>
                    </div>
                    <div class="card-content table-responsive">
                        <table id="" class="table table-striped table-no-bordered table-hover material-datatables" cellspacing="0" width="100%" style="width:100%">
                            <thead>
                            <tr>
                                <th>Organization</th>
                                <th>Certification</th>
                                <th>Period</th>
                                <th>Qualification</th>
                                <th>Category</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for certification in person.myCertifications %}
                                <tr>
                                    <td class="text-primary">{{ certification.organization }} </td>
                                    <td>{{ certification.certification }}</td>
                                    <td>{{ certification.periodFrom | date('m/Y') }} - {{ certification.periodTo | date('m/Y') }}</td>
                                    <td>{{ certification.qualification }}</td>
                                    <td>{{ certification.category }}</td>

                                </tr>
                            {% else %}
                                <tr><td class="text-primary" colspan="5">
                                        No Certifications on Record

                                    </td> </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header" data-background-color="rose">
                        <p class="category">Education History</p>
                    </div>
                    <div class="card-content table-responsive">
                        <table id="" class="table table-striped table-no-bordered table-hover material-datatables" cellspacing="0" width="100%" style="width:100%">
                            <thead>
                            <tr>
                                <th>Institution</th>
                                <th>Graduation Year</th>
                                <th>Qualification</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for cert in person.myEducation %}
                                <tr>
                                    <td class="text-primary">{{ cert.institution }} </td>
                                    <td>{{ cert.graduationYear }}</td>
                                    <td>{{ cert.qualification }}</td>

                                </tr>
                            {% else %}
                                <tr><td class="text-primary" colspan="5">
                                        No Education on Record

                                    </td> </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            </div>
        </div>
        <div class="row">

        </div>
    </div>
{% endblock %}
{% block javascripts %}
<!-- Material Dashboard javascript methods -->
<script src="{{ asset('assets/js/material-dashboard.js') }}"></script>
<!-- Material Dashboard DEMO methods, don't include it in your project! -->
<script src="{{ asset('assets/js/demo.js') }}"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            $('.select2').select2();
        });
    </script>
{% endblock %}